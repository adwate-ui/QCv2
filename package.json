{
  "name": "authentiqc-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "AuthentiqC - AI-Powered Quality Control & Product Authentication",
  "scripts": {
    "dev": "npm run dev --workspace=pages",
    "build": "npm run build:pages && npm run build:workers",
    "build:pages": "npm run build --workspace=pages",
    "build:workers": "echo 'Workers are deployed directly using wrangler'",
    "preview": "npm run preview --workspace=pages",
    "typecheck": "npm run typecheck --workspace=pages",
    "lint": "npm run lint --workspace=pages",
    "lint:fix": "npm run lint:fix --workspace=pages",
    "format": "prettier --write \"**/*.{ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,css,md}\"",
    "deploy:pages": "cd pages && npm run build && npx wrangler pages deploy dist --project-name=qcv2",
    "deploy:workers": "cd workers && ./deploy-all.sh"
  },
  "workspaces": [
    "pages",
    "workers/image-proxy"
  ],
  "devDependencies": {
    "prettier": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adwate-ui/QCv2.git"
  }
}
