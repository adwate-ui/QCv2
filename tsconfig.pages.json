{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["./packages/shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "pages/**/*",
    "components/**/*",
    "context/**/*",
    "services/**/*",
    "types.ts",
    "App.tsx",
    "vite.config.ts",
    "vite-env.d.ts",
    "packages/shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "workers"
  ]
}
